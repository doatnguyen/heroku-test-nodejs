<script>
var list,mess,interval;
var current_send_page=0;
function login() {
    var user, pass, code;
    user = $("#email").val();
    pass = $("#password").val();
    code = $("#code-fa").val();
    if (!isEmpty(code) && !isBlank(code)) {
        $.post("/login2fa", {
            email: user,
            password: pass,
            code: code
        }, function(data) {
            if (data === 'ok') {
                $("#code2fa").css("display", "none");
                $("#code-fa").val('');
                addLog("login success: "+ user);
				$("#chat-contain").css("display", "block");
            } else {
                alert("Tài khoản hoặc mật khẩu sai");
				addLog("Tài khoản hoặc mật khẩu sai");
				$("#chat-contain").css("display", "none");
            }
        });
    } else {
        $.post("/login", {
            email: user,
            password: pass
        }, function(data) {
            if (data === 'ok') {
                addLog("login success: "+user);
				$("#chat-contain").css("display", "block");
            } else if (data == 'Need 2fa') {
                $("#code2fa").css("display", "block");
				$("#chat-contain").css("display", "none");
            } else {
                alert("Tài khoản hoặc mật khẩu sai");
				addLog("Tài khoản hoặc mật khẩu sai");
				$("#chat-contain").css("display", "none");
            }
        });
    }
}

function send() {
    var list_id;
    mess = $("#mess").val();
	var time= $("#time").val();
    list_id = $("#list-page-id").val();
    if (!isEmpty(mess) && !isBlank(mess) && !isEmpty(list_id) && !isBlank(list_id)) {
		list = list_id.split('\n');
		console.log(list);
		current_send_page=0;
		interval = setInterval(send_mess_lazy, time*1000);
    }
}
function send_mess_lazy(){
	if(current_send_page<list.length){
		$.post("/send", {
			pageid: list[current_send_page],
			mess: mess
			}, function(data) {
				if(data=="ok"){
					addLog("Gửi xong page: "+list[current_send_page-1]);
				}
				else{
					alert(data);
					addLog(data);
				}
			}
        );
		current_send_page++;
	}else {
		clearInterval(interval);
		addLog("Done!")
	}
}
function addLog(str){
	$('#log').append(">"+str+'\r\n'); 
}
function addPageId(str){
	$('#list-page-id').append(str+'\r\n');
}
function isEmpty(str) {
    return (!str || 0 === str.length);
}

function isBlank(str) {
    return (!str || /^\s*$/.test(str));
}
